/* --------------------------------------------------------------
Base Vars */

/* --------------------------
Spacing */

// OWL
$space--owl      = 1.25em

// Widths
$width-contain   = 850px
$width--left     = 300px
$width--right    = 300px

// Heights
$height--header  = 75px

/* --------------------------
Container */

$container-padding = 25px
$container-space-top = $container-padding
$container-space-side = $container-padding
$container-space-btm = $container-padding

/* --------------------------
Nav */

$nav-header-bar--height = 50px

/* --------------------------
Colors */

// Generics
$c-white  = #FEFEFE
$c-black  = #333333
$c-gray   = #F8F7F3
$c-tan    = #DFDED9
$c-green  = #91B382
$c-orange = #f5a93a
$c-red    = #F0342B

// Specifics
$c-bg        = rgb(252,252,252)
$c-el-border = #BDBDBD
/* --------------------------
Radiuses */

$btn-radius = 2px

/* --------------------------
Transition Speeds */

$btn-hover-speed = 0.2s


/* --------------------------------------------------------------
Base Styles */

// Lobotomized Owl Selector - brilliant
// http://alistapart.com/article/axiomatic-css-and-lobotomized-owls
.container * + *
  margin-top: $space--owl
  +aboveMax(650px)
    margin-top: 1em

html
  background-color: $c-bg
  overflow-x: hidden

.contain
  max-width: $width-contain
  margin-left: auto
  margin-right: auto
  overflow: hidden
